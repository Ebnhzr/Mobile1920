<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <TextView
                android:id="@+id/instructionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_wide"
                android:fontFamily="@font/roboto"
                android:text="@string/instruction_title"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/instructionBody"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/instructionBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/instruction_body"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/instructionTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041"/>

        <TextView
                android:id="@+id/box_two_text"
                style="@style/white_box"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/box_eight_text"
                android:layout_marginBottom="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/box_one_text" app:layout_constraintVertical_bias="0.56"/>

        <TextView
                android:id="@+id/box_three_text"
                style="@style/white_box"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/margin_wide"
                app:layout_constraintBottom_toTopOf="@+id/box_four_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/box_four_text" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/box_one_text"
                app:layout_constraintVertical_bias="0.0" android:layout_marginTop="32dp"/>
        <TextView
                android:id="@+id/box_eight_text"
                style="@style/white_box"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintStart_toStartOf="@+id/box_two_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/box_one_text"
                android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.732"
                android:layout_marginStart="4dp"/>

        <TextView
                android:id="@+id/box_four_text"
                style="@style/white_box"
                android:layout_width="60dp"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/margin_wide"
                android:layout_marginBottom="@dimen/margin_wide"
                app:layout_constraintBottom_toTopOf="@+id/box_five_text"
                app:layout_constraintTop_toBottomOf="@+id/box_three_text"
                app:layout_constraintStart_toEndOf="@+id/box_two_text"
                app:layout_constraintEnd_toStartOf="@+id/box_six_text" app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
                android:id="@+id/box_one_text"
                style="@style/white_box"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/instructionBody"
                android:layout_marginEnd="64dp"
        />
        <TextView
                android:id="@+id/box_nine_text"
                style="@style/white_box"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/instructionBody"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/box_one_text"/>
        <TextView
                android:id="@+id/box_six_text"
                style="@style/white_box"
                android:layout_width="60dp"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/margin_wide"
                android:layout_marginBottom="@dimen/margin_wide"
                app:layout_constraintBottom_toTopOf="@+id/box_five_text"
                app:layout_constraintTop_toBottomOf="@+id/box_three_text"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/box_four_text"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/box_seven_text"/>
        <TextView
                android:id="@+id/box_seven_text"
                style="@style/white_box"
                android:layout_width="60dp"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/margin_wide"
                android:layout_marginBottom="@dimen/margin_wide"
                app:layout_constraintBottom_toTopOf="@+id/box_five_text"
                app:layout_constraintTop_toBottomOf="@+id/box_three_text"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:id="@+id/box_five_text"
                style="@style/white_box"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/margin_wide"
                android:layout_marginEnd="@dimen/margin_wide"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/box_two_text"
                app:layout_constraintTop_toBottomOf="@+id/box_four_text" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/box_eight_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>